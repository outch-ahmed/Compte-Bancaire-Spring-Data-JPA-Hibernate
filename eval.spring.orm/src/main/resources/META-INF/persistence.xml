<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	    <persistence-unit name="SPRING_HBM_PU">
	    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <!--Parametre de connections-->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db_aston"/>
            <property name="javax.persistence.jdbc.user" value="poec"/>
            <property name="javax.persistence.jdbc.password" value="poec"/>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>

            <!--Proprietes HIBERNATE NON OBLIGATOIRES-->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.max_fetch_depth" value="3"/>
            <property name="hibernate.jdbc.batch_size" value="10"/>
            <property name="hibernate.jdbc.fetch_size" value="50"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
